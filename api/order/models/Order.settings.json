{
  "connection": "default",
  "collectionName": "order",
  "info": {
    "name": "order",
    "description": ""
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "paymentIntent": {
      "type": "string",
      "unique": true
    },
    "status": {
      "required": true,
      "enum": [
        "failed",
        "pending",
        "paid",
        "refunded"
      ],
      "type": "enumeration"
    },
    "date": {
      "required": true,
      "type": "date"
    },
    "basket": {
      "required": true,
      "type": "json"
    },
    "participants": {
      "required": true,
      "type": "json"
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "tickets": {
      "collection": "ticket",
      "via": "order"
    },
    "code": {
      "unique": true,
      "required": true,
      "type": "string"
    }
  }
}
